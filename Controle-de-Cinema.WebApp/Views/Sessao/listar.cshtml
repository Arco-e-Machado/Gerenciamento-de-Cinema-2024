@model IEnumerable<ListarSessaoViewModel>
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Salas";
}
<style>
    .btn-maroon {
        background-color: #80000084;
        color: white;
        transition: all .3s ease
    }

        .btn-maroon:hover {
            scale: 1.4;
            background-color: #800000;
            transition: all .3s ease
        }
</style>
@* Cabeçalho *@
