@model IEnumerable<ListarSessaoViewModel>
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Salas";
}

@* Cabeçalho *@
<div class="mt-3">
    <a class="btn btn-danger px-4" href="/sessao/inserir">
        <i class="bi bi-plus-circle"></i>
        Nova Sessao
    </a>
</div>

@* Lista *@
<div class="row gap-3 mt-3 p-2 d-flex justify-content-around">
    @foreach (var sessao in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3 p-2 bg-dark text-white">
            <div class="card-body">
                <div class="row row-cols-2 gap-2">
                    <label class="card-title fs-5 fw-semibold">Sala: @sessao.Sala </label>

                    <div class="d-flex justify-content-end">
                        <a class="btn btn-secondary btn-sm mx-1" href="/sessao/detalhes/@sessao.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm mx-1" href="/sessao/editar/@sessao.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm mx-1" href="/sessao/excluir/@sessao.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6"><strong>Id: </strong>[@sessao.Id]</p>
                <p class="card-subtitle fs-6"><strong>Filme: </strong>[@sessao.Filme] </p>
                <p class="card-subtitle fs-6"><strong>Capacidade da Sala: </strong>[@sessao.Ingressos] </p>
            </div>
        </div>
    }
</div>