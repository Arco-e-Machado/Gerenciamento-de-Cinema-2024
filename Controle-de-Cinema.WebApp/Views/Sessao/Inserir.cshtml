@model InserirSessaoViewModel

@{
    Layout = "_Layout";
    ViewBag.Tittle = "Cadastrar Sessões";
}

<div class="container">
    <div class="col card m-5 p-4 gap-2 shadow bg-dark text-white rounded">
        <form class="d-grid gap-4" asp-action="inserir">
            <div class="mt-2">
                <label class="control-label fw-semibold">Capacidade:</label>
                <input class="form-control" type="number" asp-for="Capacidade" required min="15" max="200" />
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">Numero da Sessão:</label>
                <input class="form-control" type="text" asp-for="Numero" required />
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5" type="submit">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/sessao/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>

    </div>
</div>