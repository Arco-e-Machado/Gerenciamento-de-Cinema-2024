    <a class="btn btn-danger px-4" href="/filme/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Filme
    </a>
</div> *@

@* Lista *@
<div class="row gap-3 mt-3 p-2 d-flex justify-content-evenly">
    @foreach (var filme in Model)
    {
        <div id="card-hover" class="card col-md-5 col-lg-4 col-xl-3 p-0 bg-dark text-white">
            <a href="/filme/detalhes/@filme.Id" class="text-decoration-none">
                <div class="card-background">
                    <div class="card-image" style="background-image: url('@filme.image');"></div>
                </div>
                <div class="card-body">
                    <div class="card-title">@filme.Nome</div>
                </div>
            </a>
        </div>
    }
</div>
