@model IEnumerable<ListarFilmeViewModel>
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Filmes";

}
<style>
    .btn-maroon {
        background-color: #80000084;
        color: white;
        transition: all .3s ease
    }

        .btn-maroon:hover {
            scale: 1.4;
            background-color: #800000;
            transition: all .3s ease
        }

    #card-hover {
        scale: 1;
        transition: all .1s ease;
        text-decoration: none;
        color: white;
        cursor:pointer
    }

        #card-hover:hover {
            scale: 1.1;
            transition: all .3s ease;
        }

    }
</style>
@* Cabeçalho *@
@* <div class="mt-3">
    <a class="btn btn-danger px-4" href="/filme/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Filme
    </a>
</div> *@

@* Lista *@
<div class="row gap-3 mt-3 p-2 d-flex justify-content-evenly">
    @foreach (var filme in Model)
    {
        <div id ="card-hover" class="card col-md-5 col-lg-4 col-xl-3 p-2 bg-dark text-white">
            <a id="card-hover" href="/filme/detalhes/@filme.Id">

                <div class="card-body">



                    <div class="row row-cols-2 gap-2">
                        <label class="card-title fs-5 fw-semibold">Nome: @filme.Nome </label>

                    </div>

                    <p class="card-subtitle fs-6"><strong>Id: </strong>[@filme.Id]</p>
                    <p class="card-subtitle fs-6"><strong>Genero: </strong>[@filme.Genero] </p>
                    <p class="card-subtitle fs-6"><strong>Duração: </strong>[@filme.Duracao] </p>

                    <div class="d-flex justify-content-around gap-2 mt-3">

                        @*            <a class="btn btn-maroon btn-sm" href="/filme/detalhes/@filme.Id">
                    <i class="bi bi-search"></i>
                    </a> *@

                        <a class="btn btn-maroon btn-sm" href="/filme/editar/@filme.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-maroon btn-sm" href="/filme/excluir/@filme.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>

                </div>
            </a>
        </div>
    }
</div>
