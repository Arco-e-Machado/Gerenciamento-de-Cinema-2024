@model IEnumerable<ListarFilmeViewModel>
@{
    ViewBag.Tittle = "Listagem de Filmes";
}
<style>
    .btn-maroon {
        background-color: #80000084;
        color: white;
        transition: all .3s ease;
    }

        .btn-maroon:hover {
            scale: 1.4;
            background-color: #800000;
            transition: all .3s ease;
        }

    #card-hover {
        position: relative;
        overflow: hidden;
        text-decoration: none;
        color: white;
        cursor: pointer;
        transition: transform .3s ease;
    }

        #card-hover:hover {
            transform: scale(1.05);
        }

    .card-background {
        position: relative;
        height: 300px;
        width: 100%;
    }

    .card-image {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100%;
        width: 100%;
        transition: transform .3s ease;
    }

    #card-hover:hover .card-image {
        transform: scale(1.1);
    }

    .card-body {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background: rgba(0, 0, 0, 0.7);
        padding: 10px;
        text-align: center;
    }

    .card-title {
        margin: 0;
        font-size: 1.25rem;
        color: white;
    }
</style>

@* Cabeçalho *@
