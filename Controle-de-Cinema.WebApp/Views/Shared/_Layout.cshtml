<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Tittle - Cinemark Simulator</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<style>
    .nav-link {
        width: 7rem;
        background-color: maroon;
        text-align: center;
        margin-inline: .1rem;
    }

    #hover-cinema {
        transition: all 0.2s ease;
        cursor: pointer;
    }

        #hover-cinema:hover {
            scale: 1.2;
        }

    #link-da-logo {
        text-decoration: none;
        margin-left: 3rem;
    }

    }
</style>
<body class="d-flex flex-column min-vh-100 bg-dark">

    @* Navbar / Barra de Navegação *@
    <nav class="container navbar-expand-lg  bg-black">
        <header class="d-flex justify-content-between  align-items-center my-3">

            <a id="link-da-logo" href="http://localhost:9999">
                <label id="hover-cinema" class="fs-1 fw-bold text-danger ">Cinemar<span class="text-white">K</span></label> <span class="text-light fw-semibold fs-6">Simulator</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="nav nav-pills d-flex">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    @if (User.IsInRole("Cliente"))
                    {
                    <li class="nav-item"><a href="/sessao/listar" class="nav-link text-white btn btn-danger fw-semibold p-1">Sessão</a></li>
                    }
                    else if (User.IsInRole("Empresa"))
                    {
                        @* <li class="nav-item"><a href="@Url.Action("ListarSessoesDiarias","Sessao")" class="nav-link text-white btn btn-danger fw-semibold p-1">Sessões de Hoje</a></li> *@
                    <li class="nav-item"><a href="/sala/listar" class="nav-link text-white btn btn-danger fw-semibold p-1">Salas</a></li>
                    <li class="nav-item"><a href="/filme/listar" class="nav-link text-white btn btn-danger fw-semibold p-1">Filmes</a></li>
                    <li class="nav-item"><a href="/sessao/listar" class="nav-link text-white btn btn-danger fw-semibold p-1">Sessão</a></li>
                    <li class="nav-item"><a href="/usuario/login" class="nav-link text-white btn btn-secondary fw-semibold p-1">login</a></li>
                    }
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Usuario" asp-action="Logout" class="d-flex flex-column d-lg-flex justify-content-lg-end gap-1 w-100">
                        <a href="#" class="btn btn-outline-danger p-1">
                            <i class="bi bi-person-vcard-fill"></i>
                            @User.Identity.Name
                        </a>
                        
                        <button class="btn btn-danger p-1">
                            <i class="bi bi-box-arrow-right"></i>
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <div class="col-md-3 text-end">
                        <a asp-controller="Usuario" asp-action="Login" class="btn btn-outline-primary me-2 px-4">Login</a>
                        <a asp-controller="Usuario" asp-action="Registrar" class="btn btn-outline-primary px-4">Registro</a>
                    </div>
                }
                </div>
            </ul>
           
        </header>
    </nav>

    @* Conteúdo Principal *@
    <main class="container my-3 card  bg-black text-white rounded">
        <h1>@ViewBag.Tittle</h1>
        <hr />
        @RenderBody()
    </main>

    @* Footer / Ródapé *@
    <footer class="d-flex container bg-black justify-content-center m-auto-lg">
        <p class="text-white py-3 fs-4 mt-0">&copy; - 2024 - Cinemark Simulator</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.mask.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
