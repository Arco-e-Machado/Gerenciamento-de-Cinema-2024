@model MensagemViewModel
@{
    ViewBag.Title = "Notificação";

    var url = @Model.Controlador + @Model.Link;

}

<div class="container">
    <div class="col card m-5 p-4 gap-2 shadow bg-dark text-white rounded">
        <div class="d-flex flex-column text-center">
            <h3>@Model.Mensagem</h3>
            <p class="mt-3">Você será redirecionado em breve...</p>
            <a href="@url" id="notification" class="btn btn-secondary px-5 mt-5">
                <i class="bi bi-arrow-return-left me-1"></i>
                Voltar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                location.href = '@Model.Controlador' + '@Model.Link';
            }, 1500); 
        });
    </script>
}
