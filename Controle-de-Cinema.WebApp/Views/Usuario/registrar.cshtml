@model RegistrarViewModel
@{
    ViewBag.Title = "Registrar nova Empresa";
}

<div class="container">
    <div class="col card m-5 p-4 gap-2 shadow bg-dark text-white rounded">

        <form asp-action="registrar" method="post" class="d-grid gap-4">
            <div class="mt-2">
                <label asp-for="Usuario" class="control-label fw-semibold">Usuário:</label>
                <input asp-for="Usuario" class="form-control" type="text" required />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="mt-2 form-group">
                <label asp-for="Email" class="control-label fw-semibold">Email:</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mt-2 form-group">
                <label asp-for="Senha" class="control-label fw-semibold">Senha:</label>
                <input asp-for="Senha" class="form-control" required />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="mt-2 form-group">
                <label asp-for="ConfirmarSenha" class="control-label fw-semibold">Confirmar Senha:</label>
                <input asp-for="ConfirmarSenha" class="form-control" required />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            <div class="mt-2 form-group">
                <label asp-for="Tipo" class="control-label fw-semibold">Tipo:</label>
                <select asp-for="Tipo" asp-items="Model.Tipos" class="form-select"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5" type="submit">
                    <i class="bi bi-box-arrow-in-right me-1"></i>
                    Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>

