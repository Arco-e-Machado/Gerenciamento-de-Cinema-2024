@{
    Layout = "_Layout";
    ViewBag.Title = "Gerenciamento de Funcionários";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mb-4">

            <div class="card bg-dark text-white">

                <div class="card-header" style="background-color: maroon;">
                    <h5 class="card-title">Gerenciar Funcionários</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Contratar" method="post">
                        <button type="submit" class="btn btn-success btn-block mb-3">Contratar Funcionário</button>
                    </form>
                    <form asp-action="Demitir" method="post">
                        <button type="submit" class="btn btn-danger btn-block mb-3">Demitir Funcionário</button>
                    </form>
                    <a class="btn btn-secondary btn-block" href="/sala/Listar">Listar Funcionários</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-header bg-primary">
                    <h5 class="card-title">Gereciar Cinema</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <a class="btn btn-secondary btn-block mb-2" href="/sessao/inserir">
                        Nova Sessão
                    </a>
                    <a class="btn btn-secondary btn-block mb-2" href="/sala/inserir">
                        Inserir Nova Sala
                    </a>
                    <a class="btn btn-secondary btn-block mb-2" href="/pessoa/inserir">
                        Inserir Novo Cliente
                    </a>
                    <a class="btn btn-secondary btn-block mb-2" href="/filme/inserir">
                        Inserir Novo Filme
                    </a>
                    <a class="btn btn-danger btn-block" href="/ingresso/compraringresso">
                        Vender Ingressos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

