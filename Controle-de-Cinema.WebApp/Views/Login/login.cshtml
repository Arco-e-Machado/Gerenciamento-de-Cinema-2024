@model LoginViewModel 
@{
    Layout = "_Layout";
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="col card m-5 p-4 gap-2 shadow bg-dark text-white rounded">

        <form asp-action="Login" method="post" class="d-grid gap-4">
            <div class="mt-2">
                <label class="control-label fw-semibold">Login: (Leo)</label>
                <input class="form-control" type="text" asp-for="Usuario" required />
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">Senha: (123)</label>
                <input class="form-control" type="password" asp-for="Senha" required />
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5" type="submit">
                    <i class="bi bi-box-arrow-in-right me-1"></i>
                    Entrar
                </button>
            </div>
        </form>
    </div>
</div>

