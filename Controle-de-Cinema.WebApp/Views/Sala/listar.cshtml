@model IEnumerable<ListarSalaViewModel>
@{
    MensagemViewModel? mensagem = ViewBag.Mensagem ?? null;
    ViewBag.Tittle = "Listagem de Salas";
}

<style>
    .btn-maroon {
        background-color: #80000084;
        color: white;
        transition: all .3s ease
    }

        .btn-maroon:hover {
            scale: 1.4;
            background-color: #800000;
            transition: all .3s ease
        }

    #card-hover {
        scale: 1;
        transition: all .1s ease;
        text-decoration: none;
        color: white;
        cursor: pointer
    }

        #card-hover:hover {
            scale: 1.1;
            transition: all .3s ease;
        }

    }
</style>

<div class="row gap-3 mt-3 p-2 d-flex justify-content-evenly">
    <partial name="_Mensagem" model="mensagem"></partial>
    @foreach (var sala in Model)
    {
        <div id="card-hover" class="card col-md-5 col-lg-4 col-xl-3 p-2 bg-dark text-white">
            <a id="card-hover" href="/sala/detalhes/@sala.Id">
                <div class="card-body">


                    <div class="row row-cols-2 gap-2">
                        <label class="card-title fs-5 fw-semibold">Nome: @sala.Numero </label>

                    </div>

                    <p class="card-subtitle fs-6"><strong>Id: </strong>[@sala.Id]</p>
                    <p class="card-subtitle fs-6"><strong>Capacidade: </strong>[@sala.Capacidade] </p>

                    <div class="d-flex justify-content-around gap-2 mt-3">
                        @*
                    <a class="btn btn-maroon btn-sm" href="/sala/detalhes/@sala.Id">
                    <i class="bi bi-search"></i>
                    </a>
                    *@

                        <a class="btn btn-maroon btn-sm" href="/sala/editar/@sala.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-maroon btn-sm" href="/sala/excluir/@sala.Id">
                            <i class="bi bi-trash3"></i>
                        </a>

                    </div>
                </div>

            </a>
        </div>
    }
</div>
