@model IEnumerable<ListarSalaViewModel>
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Sessões";
}

@* Cabeçalho *@
<div class="mt-3">
    <a class="btn btn-danger px-4" href="/sala/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Nova Sala
    </a>
</div>

@* Lista *@
<div class="row gap-3 mt-3 p-2 d-flex justify-content-lg-start">
    @foreach (var sala in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3 p-2 bg-dark text-white">

            <div class="card-body">

                <div class="align-text-end">
                    <a class="btn btn-secondary btn-sm" href="/sala/detalhes/@sala.Id">
                        <i class="bi bi-search"></i>
                    </a>

                    <a class="btn btn-primary btn-sm" href="/sala/editar/@sala.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <a class="btn btn-danger btn-sm" href="/sala/excluir/@sala.Id">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>

                <div class="row row-cols-2 gap-2">
                    <label class="card-title fs-5 fw-semibold">Nome: @sala.Numero </label>

                </div>

                <p class="card-subtitle fs-6"><strong>Id: </strong>[@sala.Id]</p>
                <p class="card-subtitle fs-6"><strong>Capacidade: </strong>[@sala.Capacidade] </p>

            </div>
        </div>
    }
</div>
