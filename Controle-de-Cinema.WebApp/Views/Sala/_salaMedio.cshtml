@model DetalharSalaViewModel
@{
    int filaIndex = 0;
}
<div class="d-flex flex-column">
    @foreach (var fila in Model.Assentos.GroupBy(a => a.Numero.Split('-')[0]))
    {
    
        filaIndex++;
          <div class="d-flex justify-content-center mb-4 @(filaIndex % 3 == 0 ? "mt-5" : "")">
            @foreach (var assento in fila)
            {
                <div class="card m-2 bg-dark text-white" style="height: 3rem; width:3rem; border-radius:5px;">
                    <div class="d-flex flex-column justify-content-center text-center">
                        <i class="bi bi-star fs-4"></i>
                        <p class="card-text" style="font-size:12px">@assento.Numero</p>
                    </div>
                </div>
            }
        </div>
    }
</div>
