@model IEnumerable<ListarPessoasViewModel>
@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Pessoas";

}

@* Cabeçalho *@
<div class="mt-3">
    <a class="btn btn-danger px-4" href="/pessoa/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Cliente
    </a>
</div>

@* Lista *@
<div class="row gap-3 mt-3 p-2 d-flex justify-content-around">
    @foreach (var pessoa in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3 p-2 bg-dark text-white">

            <div class="card-body">

                <div class="row row-cols-2 gap-2">
                    <label class="card-title fs-5 fw-semibold">Nome: @pessoa.Nome </label>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/pessoa/detalhes/@pessoa.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/pessoa/editar/@pessoa.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/pessoa/excluir/@pessoa.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6"><strong>Id: </strong>[@pessoa.Id]</p>
                <p class="card-subtitle fs-6"><strong>Cpf: </strong>[@pessoa.Cpf] </p>

            </div>
        </div>
    }
</div>
